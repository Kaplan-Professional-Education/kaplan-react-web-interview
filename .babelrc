{
  "presets": ["react-app"],
  "plugins": [
    [
      "emotion",
      {
        "sourceMap": true,
        "autoLabel": true
      }
    ],
    "syntax-dynamic-import",
    "transform-export-extensions"
  ],
  "env": {
    "test": {
      "plugins": ["transform-react-jsx-source"]
    },
    "production": {
      "plugins": [["emotion", { "hoist": true }]]
    }
  }
}
